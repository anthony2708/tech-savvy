{
  "name": "react-2048",
  "version": "1.0.0",
  "private": true,
  "description": "A React clone of 2048 game",
  "main": "src/index.js",
  "scripts": {
    "build": "yarn tsc && vite build",
    "start": "vite --host",
    "preview": "vite preview --port=3000 --host",
    "genicons": "node scripts/generateFavicons.js",
    "lint": "eslint . --ext .js,.ts,.tsx --max-warnings 0",
    "format": "prettier --write .",
    "tsc": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": [
    "React",
    "2048",
    "Typescript",
    "style-components",
    "pwa"
  ],
  "author": "Anthony Bui",
  "repository": {
    "type": "git",
    "url": "https://github.com/anthony2708/tech-savvy.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anthony2708/tech-savvy/issues"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "styled-components": "^6.1.13",
    "styled-normalize": "^8.1.1"
  },
  "devDependencies": {
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^8.25.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "favicons": "^7.2.0",
    "http-server": "^14.1.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-pwa": "^0.21.1"
  }
}
